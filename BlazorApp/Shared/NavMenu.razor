        <li class="nav-item px-3">
            <NavLink class="nav-link" href="ListEditeur">
                <span class="oi oi-plus" aria-hidden="true"></span> Liste Editeurs
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="ListLivre">
                <span class="oi oi-plus" aria-hidden="true"></span> Liste Livres
            </NavLink>
        </li>

    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
