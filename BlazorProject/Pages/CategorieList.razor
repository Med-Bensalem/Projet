@page "/ListCategories"
@inherits CategorieListBase

<h3>Liste Catégories</h3>
<hr/>
<a href="AddCategorie" class="btn btn-primary m-1">Ajouter</a>
<div>

    @if (Categories == null)
    {
        <div class="spinner"></div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id </th>
                    <th> Designation </th>
                    <th> Description </th>
                    <th> Actions </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var cat in Categories)
                {
                    <tr>
                        <td> @cat.CategorieId </td>
                        <td> @cat.Designation </td>
                        <td> @cat.Description </td>
                        <td>
                            <a href="#" class="btn btn-success m-1"> Modifier </a>
                            <a href="#" class="btn btn-danger m-1"> Supprimer</a>
                       </td>
                    </tr>
                }
            </tbody>
        </table>
    }



</div>


