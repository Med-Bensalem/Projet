@page "/AddCategorie"
@inherits CategorieListBase
<h3>Ajouter Categorie</h3>
<hr />
<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Designation" class="control-label">Designation</label>
                <input form=" Designation" class="form-control" @bind="@Categorie.Designation" />
            </div>
            <div class="form-group">
                <label for="Description" class="control-label">Description</label>
                <input form="Description" class="form-control" @bind="@Categorie.Description" />
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-outline-primary" @onclick="@CreateCategorie" value=" Enregistrer"/>
                <input type="button" class="btn btn-outline-danger" @onclick="@Cancel"  value="Annuler"/>
            </div>
        </div>

    </div>
</form>
